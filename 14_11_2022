# Pide una palabra y te devuelve sus letras y su longitud. Me dice cu치ntas vocales y consonantes tiene_3
def esVocal(letra):
    respuesta=False
    if(letra=='a' or letra=='e' or letra=='i' or letra=='o' or letra=='u'):
        respuesta=True
    return(respuesta)
    
def esConsonante(letra):
    respuesta=True
    if(esVocal(letra)==True):
        respuesta=False
    return(respuesta)

def deletreo():
    palabra=input("Dime una palabra: ")
    cuentavocales=0
    cuentaconsonantes=0
    for cont in range(0,len(palabra)):
        print(palabra[cont]+ ' ')
        if(esVocal(palabra[cont])==True):
            cuentavocales=cuentavocales+1
        if(esConsonante(palabra[cont])==True):
            cuentaconsonantes=cuentaconsonantes+1
    print("Tiene "+str(cuentavocales) +" vocales")
    print("Tiene "+str(cuentaconsonantes) +" consonantes")

deletreo()


# Pide una palabra y te devuelve sus letras y su longitud. Me dice cu치ntas vocales y consonantes tiene_4
def esVocal(letra):
    respuesta=False
    if(letra=='a' or letra=='e' or letra=='i' or letra=='o' or letra=='u'):
        respuesta=True
    return(respuesta)

def deletreo():
    palabra=input("Dime una palabra: ")
    cuentavocales=0
    cuentaconsonantes=0
    for cont in range(0,len(palabra)):
        print(palabra[cont]+ ' ')
        if(esVocal(palabra[cont])==True):
            cuentavocales=cuentavocales+1
        else:
            cuentaconsonantes=cuentaconsonantes+1
    print("Tiene "+str(cuentavocales) +" vocales")
    print("Tiene "+str(cuentaconsonantes) +" consonantes")

deletreo()



