#Cajero automatico
#1.Ingresar
#2.Sacar
#3.Salir
def muestra_menu():
    
    print("******")
    print("* menu *")
    print("******")
    print("1.Ingresar dinero")
    print("2.Sacar dinero")
    print("3.Salir")


def ingresar_dinero(saldo):
    dinero=int(input("Cuando dinero quieres ingresar?: "))
    saldo=saldo+dinero
    return(saldo)
    
    
def sacar_dinero(saldo):
    dinero=int(input("Cuando dinero quieres sacar?: "))
    saldo=saldo-dinero
    return(saldo)


def main():
    seguir=True
    saldo=0
    while(seguir==True):
        muestra_menu()
        respuesta=int(input("Que deseas hacer: "))
        if(respuesta==1):
            saldo=ingresar_dinero(saldo)
            seguir=True
        if(respuesta==2):
            saldo=sacar_dinero(saldo)
            seguir==True
            if(respuesta==3):
                print("Muchas gracias y hasta pronto")
                seguir==False

main()
